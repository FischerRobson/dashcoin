{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "import/prefer-default-export": "off"
    },
    "settings": {
        "import/resolver": {
          "typescript": {} // this loads <rootdir>/tsconfig.json to eslint (fix .ts import not found)
        },
      },
}
